{
  "workspaces": [
    "apps/*",
    "lib/*"
  ],
  "name": "turborepo-egghead",
  "version": "1.0.0",
  "description": "A Turborepo course for Egghead.io",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build:turbo": "turbo run build",
    "build": "concurrently \"npm:build:dashboard\" \"npm:build:blog\" \"npm:build:copyright\"",
    "typecheck": "concurrently \"npm:typecheck:dashboard\" \"npm:typecheck:blog\" \"npm:typecheck:copyright\"",
    "test": "concurrently \"npm:test:dashboard\" \"npm:test:blog\" \"npm:test:copyright\"",
    "check": "concurrently \"npm:typecheck\" \"npm:test\"",
    "dev:dashboard": "turbo run dev --scope=dashboard --include-dependencies",
    "dev:blog": "turbo run dev --scope=dashboard --include-dependencies",
    "dev:copyright": "turbo run dev --scope=dashboard --include-dependencies",
    "build:dashboard": "npm run build -w=dashboard",
    "build:blog": "npm run build -w=blog",
    "build:copyright": "npm run build -w=copyright",
    "typecheck:dashboard": "npm run typecheck -w=dashboard",
    "typecheck:blog": "npm run typecheck -w=blog",
    "typecheck:copyright": "npm run typecheck -w=copyright",
    "test:dashboard": "npm run test -w=dashboard",
    "test:blog": "npm run test -w=blog",
    "test:copyright": "npm run test -w=copyright"
  },
  "keywords": [],
  "author": "Alejandro Nanez",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.1.0",
    "turbo": "^1.1.10"
  }
}
